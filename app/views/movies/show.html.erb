<h1><%= @movie.title %></h1>
<hr>
<p><%= @movie.description %></p>
<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<button class="btn btn-info like">좋아요</button>
<script type="text/javascript">
$(document).on('ready', function(){
    $('.like').on('click', function(){
        console.log("Like!!");
        $.ajax({
            url: '/likes/<%= @movie.id %>'
        });
    });
    
});
</script>